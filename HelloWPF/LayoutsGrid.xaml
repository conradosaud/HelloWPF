<Window x:Class="HelloWPF.Elementos03"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="Elementos03" Height="450" Width="400">
    <Grid >
        
        <!-- Desenho de como vai ser a grade -->
        <Grid.ColumnDefinitions> <!-- Colunas -->
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions> <!-- Linhas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        
        <!-- Posicionamento dos itens dentro da grade -->
        <Button Grid.Column="0" Grid.Row="0" >Teste</Button>
        <Button Grid.Column="1" Grid.Row="1" >Teste</Button>
    </Grid>
</Window>
